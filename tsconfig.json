{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "outDir": "bin",
        "target": "es6",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ],
        },
    },
    "include": [
        "src",
        "types/jsx.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}